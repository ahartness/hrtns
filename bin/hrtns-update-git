#!/bin/bash
source "$HOME/.local/share/hrtns/bin/lib/helpers.sh"

HRTNS_DIR="$HOME/.local/share/hrtns"
BRANCH=$(git --no-pager -C "$HRTNS_DIR" branch --show-current)

if [[ "$BRANCH" == "dev" ]]; then
  # Dev branch: check for new commits, then pull if available
  git --no-pager -C "$HRTNS_DIR" fetch origin dev -q

  local_commit=$(git --no-pager -C "$HRTNS_DIR" rev-parse --short HEAD)
  remote_commit=$(git --no-pager -C "$HRTNS_DIR" rev-parse --short origin/dev)

  if [[ "$local_commit" != "$remote_commit" ]]; then
    log_success "Update available ($local_commit -> $remote_commit)"

    # Show what's changing
    echo ""
    git --no-pager -C "$HRTNS_DIR" log --oneline --color=always "$local_commit..$remote_commit" | sed 's/^/  /'
    echo ""
    git --no-pager -C "$HRTNS_DIR" diff --stat --color=always "$local_commit..$remote_commit" | sed 's/^/  /'
    echo ""

    git --no-pager -C "$HRTNS_DIR" pull --autostash -q
    git --no-pager -C "$HRTNS_DIR" diff --check || git --no-pager -C "$HRTNS_DIR" reset --merge
    log_success "Updated to $remote_commit"
  else
    log_info "Dev branch up to date"
    exit 1
  fi
else
  # Master branch: check for new tags, then pull if available
  latest_tag=$(git --no-pager -C "$HRTNS_DIR" ls-remote --tags origin 2>/dev/null | grep -v "{}" | awk '{print $2}' | sed 's#refs/tags/##' | sort -V | tail -n 1)
  if [[ -z "$latest_tag" ]]; then
    log_error "Could not retrieve latest tag"
    exit 1
  fi

  current_tag=$(git --no-pager -C "$HRTNS_DIR" describe --tags $(git --no-pager -C "$HRTNS_DIR" rev-list --tags --max-count=1) 2>/dev/null)
  if [[ -z "$current_tag" ]]; then
    log_error "Could not retrieve current tag"
    exit 1
  fi

  if [[ "$current_tag" != "$latest_tag" ]]; then
    log_success "Update available ($current_tag -> $latest_tag)"

    # Show what's changing
    echo ""
    git --no-pager -C "$HRTNS_DIR" log --oneline --color=always "$current_tag..$latest_tag" | sed 's/^/  /'
    echo ""
    git --no-pager -C "$HRTNS_DIR" diff --stat --color=always "$current_tag..$latest_tag" | sed 's/^/  /'
    echo ""

    git --no-pager -C "$HRTNS_DIR" pull --autostash -q
    git --no-pager -C "$HRTNS_DIR" diff --check || git --no-pager -C "$HRTNS_DIR" reset --merge
    log_success "Updated to $latest_tag"
  else
    log_info "Up to date ($current_tag)"
    exit 1
  fi
fi
